@model PedidoViewModel

@{
    ViewData["Title"] = "Editar Pedido";
}

<div class="content-wrapper">

    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0"></h1>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container">
            <div class="col-md-12">
                <div class="card card-olive">

                    <div class="card-header">
                        <h3 class="card-title">Editar Pedido</h3>
                    </div>

                    <div class="card-body">

                        <form asp-controller="Pedidos" asp-action="Editar">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input asp-for="IdPedido" type="hidden" class="form-control">
                            <!-- Inicio Input Platillo -->
                            <div class="form-group">
                                <label>Platillo: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-pencil-square"></i></span>
                                    </div>
                                    <input asp-for="NombrePlatillo" type="text" class="form-control" placeholder="Escriba el nombre del platillo">
                                </div>
                                <span asp-validation-for="NombrePlatillo" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Platillo -->

                            <!-- Inicio Input Precio-->
                            <div class="form-group">
                                <label>Precio: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-currency-dollar"></i></span>
                                    </div>
                                    <input asp-for="Costo" class="form-control" placeholder="Escriba el precio del platillo">
                                </div>
                                <span asp-validation-for="Costo" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Precio -->

                            <!-- Inicio Input Cantidad -->
                            <div class="form-group">
                                <label>Cantidad: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-123"></i></span>
                                    </div>
                                    <input asp-for="Cantidad" class="form-control" placeholder="Escriba la cantidad">
                                </div>
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Cantidad -->

                            <!-- Inicio Input Cliente -->
                            <div class="form-group">
                                <label>Cliente: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    </div>
                                    <input asp-for="Cliente" type="text" class="form-control" placeholder="Escriba el nombre del cliente">
                                </div>
                                <span asp-validation-for="Cliente" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Cliente -->

                            <!-- Inicio Input Dirección -->
                            <div class="form-group">
                                <label>Dirección: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                    </div>
                                    <input asp-for="Direccion" type="text" class="form-control" placeholder="Escriba la dirección del cliente">
                                </div>
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Dirección -->

                            <!-- Inicio Input Tipo de Pago -->
                            <div class="form-group">
                                <label>Tipo de Pago: </label>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><i class="bi bi-credit-card"></i></span>
                                    </div>
                                    <select asp-for="TipoPago" class="form-control form-select">
                                        <option value="Efectivo">Efectivo</option>
                                        <option value="Tarjeta Débito ">Tarjeta Débito</option>
                                        <option value="Tarjeta Crédito">Tarjeta Crédito</option>
                                    </select>
                                </div>
                                <span asp-validation-for="TipoPago" class="text-danger"></span>
                            </div>
                            <!-- Fin Input Teipo de Pago -->
                            
                            <button type="submit" class="btn btn-success">Editar</button>
                            <a class="btn btn-secondary" asp-controller="Pedidos" asp-action="Listar">Cancelar </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }
        <!-- jQuery -->
        <script src="../../plugins/jquery/jquery.min.js"></script>
        <!-- Bootstrap 4 -->
        <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    </div>