@model PedidoViewModel

@{
    ViewData["Title"] = "Eliminar Pedido";
}

<div class="content-wrapper">

    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-8">
                    <h1 class="m-0">Entregando Pedido: @Model.NombrePlatillo</h1>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container">
            <div class="col-md-12">
                <div class="card card-warning">
                    <div class="card-header">
                        <h3 class="card-title">Pedidos</h3>
                    </div>

                    <div class="card-body">

                        <form asp-controller="Pedidos" asp-action="Entregar">
                            <input asp-for="IdPedido" type="hidden" class="form-control">

                            <div class="alert alert-warning alert-dismissible col-md-6">
                                <h5><i class="icon fas fa-ban"></i>Advertencia</h5>
                                ¿Está seguro de entregar el pedido del cliente: @Model.Cliente?
                            </div>

                            <button type="submit" class="btn btn-success">Entregar</button>
                            <a class="btn btn-secondary" asp-controller="Pedidos" asp-action="Listar">Cancelar </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>