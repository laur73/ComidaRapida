@model UsuarioViewModel

@{
    ViewData["Title"] = "Eliminar Repartidor";
}

<div class="content-wrapper">

    <div class="content-header">
        <div class="container">
            <div class="row mb-2">
                <div class="col-sm-8">
                    <h1 class="m-0">Eliminando Repartidor: @Model.Nombre</h1>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>

    <section class="content">
        <div class="container">
            <div class="col-md-12">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Repartidores</h3>
                    </div>

                    <div class="card-body">

                        <form asp-controller="Repartidores" asp-action="Eliminar">
                            <input asp-for="IdUsuario" type="hidden" class="form-control">

                            <div class="alert alert-danger alert-dismissible col-md-6">
                                <h5><i class="icon fas fa-ban"></i>Advertencia</h5>
                                ¿Está seguro de eliminar el repartidor: @Model.Nombre?
                            </div>

                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a class="btn btn-secondary" asp-controller="Repartidores" asp-action="Listar">Cancelar </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</div>